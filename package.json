{
  "name": "mars_rover",
  "version": "1.0.0",
  "description": "mars rover app",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint ",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tslint -p ./tsconfig.json --force",
    "lint:ci": "tslint --format junit --project ./tsconfig.json --out test-lint.xml",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/ioredis": "3.2.7",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.12",
    "backend-tslint-rules": "1.3.0",
    "express": "4.17.1",
    "express-flash": "0.0.2",
    "express-session": "1.17.1",
    "express-validator": "6.9.2",
    "jest": "24.9.0",
    "jest-junit": "8.0.0",
    "prettier": "1.19.1",
    "pretty-quick": "^1.11.1",
    "rimraf": "3.0.0",
    "standard-version": "7.0.0",
    "ts-jest": "24.1.0",
    "tslint": "5.10.0",
    "tslint-clean-code": "0.2.7",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "1.13.3",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@types/errorhandler": "^1.5.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/utils/tests/"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "cache": false,
    "silent": true,
    "coverageReporters": [
      "html",
      "cobertura",
      "lcov"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/*.spec.ts"
    ]
  }
}
